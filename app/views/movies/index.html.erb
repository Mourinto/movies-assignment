<h1>All Movies</h1>
<% if @movies.present? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>

       <tr> <%= render partial: 'movies_list', locals: { movie: movie } %></tr>
    <% end %>
      </tbody>
</table>

<% else %>
  <p>No movies found.</p>
<% end %>

<td><%= link_to 'View Actors', actors_path %></td>



